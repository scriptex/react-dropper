{
  "name": "react-dropper",
  "version": "0.1.0",
  "description": "Pick color from image in React",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "clear": "rm -rf dist",
    "start": "tsc -w",
    "build": "yarn clear && tsc --build tsconfig.json",
    "test": "jest",
    "test:coverage": "yarn test --coverage",
    "lint": "tslint -c tslint.json --project tsconfig.json",
    "prepare": "yarn lint && yarn build && yarn test",
    "demo": "webpack --mode production"
  },
  "keywords": [
    "React",
    "Accordion",
    "Typescript",
    "Widget"
  ],
  "author": "Atanas Atanasov <scriptex.bg@gmail.com> (https://atanas.info)",
  "repository": "https://github.com/scriptex/react-dropper",
  "bugs": {
    "url": "https://github.com/scriptex/react-dropper/issues",
    "email": "scriptex.bg@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "react": "18.1.0",
    "react-dom": "18.1.0"
  },
  "peerDependencies": {
    "react": "18.1.0",
    "react-dom": "18.1.0"
  },
  "devDependencies": {
    "@types/enzyme": "3.10.12",
    "@types/jest": "27.5.0",
    "@types/jsdom": "16.2.14",
    "@types/react": "18.0.9",
    "@types/react-dom": "18.0.3",
    "@types/react-test-renderer": "18.0.0",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.6",
    "file-loader": "6.2.0",
    "jest": "28.1.0",
    "jest-css-modules": "2.1.0",
    "jsdom": "19.0.0",
    "react-test-renderer": "18.1.0",
    "source-map-loader": "3.0.1",
    "ts-jest": "28.0.2",
    "ts-loader": "9.3.0",
    "tslint": "6.1.3",
    "tslint-react": "5.0.0",
    "typescript": "4.6.4",
    "webpack": "5.72.0",
    "webpack-cli": "4.9.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "setupFiles": [
      "<rootDir>/test-setup.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/demo/",
      "<rootDir>/dist/",
      "<rootDir>/node_modules/",
      "<rootDir>/test-setup.js"
    ],
    "moduleNameMapper": {
      "\\.(css|scss|svg|jpg|png)$": "<rootDir>/node_modules/jest-css-modules"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
