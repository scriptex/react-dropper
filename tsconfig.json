{
	"compilerOptions": {
		"outDir": "./dist",
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"strictNullChecks": true,
		"removeComments": true,
		"declaration": true,
		"sourceMap": false,
		"jsx": "react",
		"lib": ["dom", "es2016", "es2017.object"],
		"typeRoots": ["node_modules/@types"],
		"skipLibCheck": true,
		"downlevelIteration": true
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"exclude": ["node_modules"]
}
